\newcommand{\twocell}[5]{
\ensuremath{
\begin{gathered}
 \begin{tikzpicture}
  \node (CLeft) {\ensuremath{#1}};
  \node (CRight) [right of=CLeft, node distance=1.5cm] {\ensuremath{#2}};
  \draw[->,bend left=40] (CLeft) to node[above,midway] (F) {\ensuremath{#3}} (CRight);
  \draw[->,bend right=40] (CLeft) to node[below,midway] (G) {\ensuremath{#4}} (CRight);
  \draw[-implies, double, double equal sign distance,shorten >=2pt, shorten <=2pt] (F) to node[right,midway]{\ensuremath{#5}} (G);
 \end{tikzpicture}
\end{gathered}}}

\newcommand{\adjunctionex}[5]{
\ensuremath{
\begin{gathered}
\begin{tikzpicture}
  \node (CLeft) {\ensuremath{#1}};
  \node (CRight) [right of=CLeft, node distance=2cm] {\ensuremath{#2}};
  \node (Adj) [right of=CLeft, node distance=1cm] {\ensuremath{#5}};
  \draw[->,bend left=40] (CLeft) to node[above,midway] (F) {\ensuremath{#3}} (CRight);
  \draw[->,bend left=40] (CRight) to node[below,midway] (G) {\ensuremath{#4}} (CLeft);
\end{tikzpicture}
\end{gathered}}}

\newcommand{\vmorphexx}[6]{
\begin{gathered}
\begin{tikzpicture}[node distance=#5, font=#4]
\node[vmlabel] (t) {\ensuremath{#1}};
\node[below of=t, vmlabel] (b) {\ensuremath{#2}};
\draw[#6] (t) to node[right]{\ensuremath{#3}} (b);
\end{tikzpicture}
\end{gathered}
}

